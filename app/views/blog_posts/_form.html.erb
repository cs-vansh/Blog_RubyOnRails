<%# instead of using @blog_post instance variable, we are using blog_post which should be passed by whatever template is using this partial  %>

<%= form_with model: blog_post, html: { class: "centered-form" } do |form| %>
  <% if form.object.errors.any? %>
    <div class="form-errors">
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :cover_image %> 
    
      <% if blog_post.cover_image.present? %>
          <br>
          <%= image_tag blog_post.cover_image %>
      <% end %>

    <%= form.file_field :cover_image %>
  </div>
  
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="rich-text-container">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div>
    <%= form.label :published_at %>
    <%= form.datetime_select :published_at, include_blank: true %>
  </div>

  <div class="form-button-row">
    <%= form.button %>
  </div>
<% end %>